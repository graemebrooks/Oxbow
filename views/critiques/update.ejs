<%- include('../partials/header') %>
<div class="new-critique-container">
    <div id="critique-form-container">
        <div id="critique-info-card">
                <h3><%= critique.critiqueTitle %></h3>
                <p><%= critique.artistName %>, <%= critique.artworkPublishDate %></p>
        </div>
        <div id="critique-form-card">
                <form action="/critiques/<%= critique._id %>?_method=PUT" method="POST" id="update-critique">
                    <div class="form-group">
                            <div class="">
                                <input type="text" name="critiqueTitle" class="form-control" id="critiqueTitle" value="<%= critique.critiqueTitle %>">
                            </div>
                            <textarea class="form-control" name="critiqueBody" id="critiqueBody" rows="5"><%= critique.critiqueBody %></textarea>
                        </div>
                        <label for="critiqueRating">Rating</label>
                        <select class="form-control" name="critiqueRating" id="critiqueRating">
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                        </select>
                    <button type="submit" id="update-btn" form="update-critique" class="btn btn-outline-primary">Update</button>
                </form>
        </div>
    </div>
    <div class="critique-art-container">
        <img src="<%= critique.artworkImage %>" alt="">
    </div>
</div>
<%- include('../partials/footer') %>